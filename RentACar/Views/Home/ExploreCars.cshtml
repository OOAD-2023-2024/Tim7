@model VoziloPretragaViewModel

@{
    ViewData["Title"] = "Explore Cars";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Rent-a-Car</title>
    <link rel="stylesheet" href="~/css/Styles.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            margin: 0;
            padding: 0;
            color: #333;
        }

        header {
            background-color: #333;
            color: #fff;
            padding: 1rem 0;
            position: relative;
        }

        .admin-buttons {
            position: absolute;
            top: 1rem;
            right: 1rem;
        }

            .admin-buttons a {
                margin-left: 1rem;
                background-color: #ff5722;
                color: #fff;
                padding: 0.5rem 1rem;
                text-decoration: none;
                font-weight: bold;
                border-radius: 5px;
            }

                .admin-buttons a:hover {
                    background-color: #e64a19;
                }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 1rem;
        }

        .search-filters {
            display: flex;
            flex-direction: column;
            gap: 1rem;
            padding: 2rem 0;
        }

            .search-filters input,
            .search-filters select,
            .search-filters button {
                padding: 0.5rem;
                font-size: 1rem;
            }

            .search-filters button {
                background-color: #ff5722;
                color: #fff;
                border: none;
                cursor: pointer;
                font-weight: bold;
            }

        .cars-grid {
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .car-card {
            background: #f7f7f7;
            padding: 1rem;
            border-radius: 10px;
            width: calc(33.333% - 1rem);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            display: flex;
            flex-direction: column;
            align-items: center;
        }

            .car-card img {
                width: 100%;
                height: 200px; /* Adjust the height as needed */
                object-fit: cover; /* Ensures the image covers the area without distortion */
                border-radius: 10px;
            }

            .car-card h3 {
                font-size: 1.25rem;
                margin: 0.5rem 0;
            }

            .car-card p {
                font-size: 1rem;
                color: #666;
            }

        a {
            text-decoration: none;
            color: inherit;
        }

            a:hover {
                text-decoration: underline;
            }

        .availability {
            font-weight: bold;
        }

        .available {
            color: green;
        }

        .not-available {
            color: red;
        }
    </style>
</head>
<body>
    <header>
        <div class="container">
            <h1>@ViewData["Title"]</h1>
            @if (User.IsInRole("Administrator"))
            {
                <div class="admin-buttons">
                    <a asp-controller="Vozilo" asp-action="Create">Add Vehicle</a>
                    <a asp-controller="Vozilo" asp-action="Delete">Delete Vehicle</a>
                </div>
            }
        </div>
    </header>

    <div class="container">
        <section class="search-filters">
            <form method="get" asp-action="ExploreCars">
                <input type="text" name="SearchTerm" placeholder="Search by manufacturers" value="@Model.SearchTerm" />
                <input type="number" name="MinPrice" placeholder="Min price" value="@Model.MinCijena" />
                <input type="number" name="MaxPrice" placeholder="Max price" value="@Model.MaxCijena" />
                <select name="Model">
                    <option value="">All Models</option>
                    @foreach (var car in Model.Cars.Where(c => c.Proizvodjac == Model.SearchTerm))
                    {
                        <option value="@car.Model">@car.Model</option>
                    }
                </select>

                <select name="Type">
                    <option value="">All Types</option>
                    <option value="Passenger">Passenger</option>
                    <option value="Commercial">Commercial</option>
                </select>

                <button type="submit">Search</button>
            </form>
        </section>

        <section class="cars-grid">
            @foreach (var car in Model.Cars)
            {
                <a href="@Url.Action("Details", "Vozilo", new { id = car.Id })" class="car-card">
                    <img src="@car.Slika" alt="@car.Model" />
                    <h3>@car.Proizvodjac @car.Model</h3>
                    <p>Type: @car.Tip</p>
                    <p>Price: $@car.Cijena</p>
                </a>
            }
        </section>
    </div>
</body>
</html>
