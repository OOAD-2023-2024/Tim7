@section Scripts {
    <script>
        $(document).ready(function () {
            $('#submitBtn').click(function () {
                console.log("Button clicked!"); // Ispisuje u konzoli kada se pritisne dugme
            });
        });
    </script>
    <script>
        $(document).ready(function () {
            $('#Tip').change(function () {
                var selectedTip = $(this).val();
                if (selectedTip == '@((int)TipVozila.TRANSPORTNO)') {
                    $('#transportnoVoziloFields').show();
                    $('#putnickoVoziloFields').hide();
                } else if (selectedTip == '@((int)TipVozila.PUTNICKO)') {
                    $('#putnickoVoziloFields').show();
                    $('#transportnoVoziloFields').hide();
                } else {
                    $('#transportnoVoziloFields').hide();
                    $('#putnickoVoziloFields').hide();
                }
            });
        });
    </script>
